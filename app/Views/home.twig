{% extends "template.twig" %}
{% block content %}
{% include "header.twig" %}
<div class="container">
    <div class="content">
        <div class="row">
            <div class="col-md-8">
                <div class="mt-3 mb-5">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="p-4 border border-primary shadow-sm mb-3 h-100">
                                <div class="mb-2">
                                    <div class="d-flex justify-content-start">
                                        <div class="me-2">
                                            <img style="width:50px" src="/assets/img/ONLINE.png" alt="">
                                        </div>
                                        <div>
                                            <div>
                                                <a href="https://pondok.dukcapil.tapinkab.go.id"
                                                    class="text-decoration-none fw-bold">
                                                    Pondok Dukcapil
                                                </a>
                                            </div>
                                            <div class="text-secondary small mt-2">
                                                Pelayanan administrasi kependudukan secara online
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="p-4 border border-primary shadow-sm mb-3 h-100">
                                <div class="mb-2">
                                    <div class="d-flex justify-content-start">
                                        <div class="me-2">
                                            <img style="width:50px" src="/assets/img/IKD.png" alt="">
                                        </div>
                                        <div>
                                            <div>
                                                <a href="/publikasi/identitas-kependudukan-digital"
                                                    class="text-decoration-none fw-bold">
                                                    Identitas Kependudukan Digital
                                                </a>
                                            </div>
                                            <div class="text-secondary small mt-2">
                                                Aplikasi dokumen kependudukan berbentuk digital
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="my-3">
                    <div class="fs-4 mb-3">Berita & Kegiatan</div>
                    <div class="owl-carousel">
                        {% for item in articles %}
                        <a href="{{ item.permalink }}" class="text-decoration-none" target="_blank">
                            <div>
                                <div class="image-container"><img src="/images/{{ item.cover}}" alt="{{ item.title }}">
                                    <div class="overlay">
                                        <div class="caption"><span class="d-block">{{ item.title}}</span></div>
                                    </div>
                                </div>
                            </div>
                        </a>
                        {% endfor %}
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="p-3">
                    <div class="form-floating">
                        <input type="text" name="keyword" id="keyword"
                            class="form-control form-control-lg border-primary" placeholder="Cari disini..."
                            autocomplete="off">
                        <label for="keyword" class="form-label text-muted">Cari disini, contoh: Kartu Keluarga</label>
                    </div>
                    <div id="search-result" class="dropdown-menu"></div>
                </div>
                <div class="faq">
                    <div class="p-3">
                        <span class="fs-5">
                            Yang Sering Ditanyakan?
                        </span>
                    </div>
                    <div class="accordion accordion-flush" id="accordionFlushExample">
                        <div class="accordion-item">
                            <div class="accordion-header" id="flush-headingOne">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                                    data-bs-target="#flush-collapseOne" aria-expanded="false"
                                    aria-controls="flush-collapseOne">
                                    Dimana saya bisa mendapatkan informasi persyaratan dan tatacara
                                    pembuatan dokumen kependudukan?
                                </button>
                            </div>
                            <div id="flush-collapseOne" class="accordion-collapse collapse"
                                aria-labelledby="flush-headingOne" data-bs-parent="#accordionFlushExample">
                                <div class="accordion-body">
                                    <div class="p-2">
                                        Semua persyaratan dan tatacara penerbitan dokumen kependudukan dapat dilihat
                                        pada menu pelayanan.
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="accordion-item">
                            <div class="accordion-header" id="flush-headingTwo">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                                    data-bs-target="#flush-collapseTwo" aria-expanded="false"
                                    aria-controls="flush-collapseTwo">
                                    Bagaimana caranya mengajukan permohonan pengurusan dokumen
                                    kependudukan?
                                </button>
                            </div>
                            <div id="flush-collapseTwo" class="accordion-collapse collapse"
                                aria-labelledby="flush-headingTwo" data-bs-parent="#accordionFlushExample">
                                <div class="accordion-body">
                                    <div class="p-2">
                                        Permohonan pengurusan dokumen kependudukan dapat dilakukan
                                        dengan salah satu cara sebagai berikut:
                                        <br /><br />
                                        1. Datang Langsung ke Kantor Dinas Kependudukan dan Pencatatan
                                        Sipil Kabupaten Tapin pada jam dari hari kerja
                                        <br /><br>
                                        2. Menghubungi salah satu nomor Layanan Online (via WhatsApp) yang
                                        bisa dilihat pada menu layanan online
                                        <br /><br>
                                        3. Melalui petugas desa terdekat
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="accordion-item">
                            <div class="accordion-header" id="flush-headingThree">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                                    data-bs-target="#flush-collapseThree" aria-expanded="false"
                                    aria-controls="flush-collapseThree">
                                    Dimana tempat pengambilan dokumen kependudukan yang diajukan
                                    secara online/WhatsApp?
                                </button>
                            </div>
                            <div id="flush-collapseThree" class="accordion-collapse collapse"
                                aria-labelledby="flush-headingThree" data-bs-parent="#accordionFlushExample">
                                <div class="accordion-body">
                                    <div class="p-2">
                                        1. Dokumen kependudukan bisa diambil di Kantor Dinas
                                        Kependudukan dan Pencatatan Sipil Kabupaten Tapin pada hari
                                        dan jam kerja setelah menerima pesan/notifikasi dari petugas
                                        layanan dengan membawa bukti fisik dan persyaratan yang
                                        diminta
                                        <br /><br>
                                        2. Menggunakan jasa layananan pengantaran petugas POS ke
                                        alamat langsung
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="accordion-item">
                            <div class="accordion-header" id="flush-headingFour">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                                    data-bs-target="#flush-collapseFour" aria-expanded="false"
                                    aria-controls="flush-collapseFour">
                                    Bagaimana cara menyampaikan pengaduan permasalahan pelayanan
                                    administrasi kependudukan?
                                </button>
                            </div>
                            <div id="flush-collapseFour" class="accordion-collapse collapse"
                                aria-labelledby="flush-headingFour" data-bs-parent="#accordionFlushExample">
                                <div class="accordion-body">
                                    <div class="p-2">
                                        Pengaduan permasalahan administrasi kependudukan dapat
                                        disampaikan melalui:
                                        <br /><br>
                                        1. Kotak Pengaduan di Kantor Kependudukan dan Pencatatan Sipil
                                        Kabupaten Tapin
                                        <br /><br>
                                        2. Menghubungi nomor pengaduan di
                                        <span class="fst-italic bg-warning">
                                            0811-511-3141
                                        </span>
                                        <br /><br>
                                        3. Melalui email
                                        <span class="fst-italic bg-warning">
                                            pengaduan@dukcapil.tapinkab.go.id
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="accordion-item">
                            <div class="accordion-header" id="flush-headingFive">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                                    data-bs-target="#flush-collapseFive" aria-expanded="false"
                                    aria-controls="flush-collapseFive">
                                    Apakah pengurusan dokumen kependudukan dikenakan biaya?
                                </button>
                            </div>
                            <div id="flush-collapseFive" class="accordion-collapse collapse"
                                aria-labelledby="flush-headingFive" data-bs-parent="#accordionFlushExample">
                                <div class="accordion-body">
                                    <div class="p-2">
                                        Tidak, semua layanan dokumen kependudukan
                                        <span class="fst-italic text-bg-danger">
                                            GRATIS!
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="accordion-item">
                            <div class="accordion-header" id="flush-headingSix">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                                    data-bs-target="#flush-collapseSix" aria-expanded="false"
                                    aria-controls="flush-collapseSix">
                                    Bagaimana cara legalisir dokumen kependudukan?
                                </button>
                            </div>
                            <div id="flush-collapseSix" class="accordion-collapse collapse"
                                aria-labelledby="flush-headingSix" data-bs-parent="#accordionFlushExample">
                                <div class="accordion-body">
                                    <div class="p-2">
                                        Dokumen kependudukan yang sudah memiliki barcode atau Tanda Tangan Elektronik
                                        (TTE) tidak perlu di legalisir
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    const owl = $(".owl-carousel");
    owl.owlCarousel({
        loop: true,
        margin: 15,
        autoplay: true,
        autoplayTimeout: 5000,
        autoplayHoverPause: true,
        responsiveClass: true,
        responsive: {
            0: {
                items: 1,
            },
            600: {
                items: 3,
            },
            1000: {
                items: 3,
            },
        },
    });
</script>
{% include "footer.twig" %}
{% endblock %}